<style>
  .container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    padding: 2rem 1rem;
    max-width: 800px;
    animation: fadeIn 0.8s ease-in;
  }

  header {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
  }

  img {
    position: relative;
    margin-bottom: 1rem;
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media only screen and (min-width: 500px) {
    .container {
      padding: 3rem 2rem;
    }
  }

  @media only screen and (min-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
